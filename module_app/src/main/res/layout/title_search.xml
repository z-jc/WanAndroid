<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/Color_4184F2"
    android:fitsSystemWindows="true"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:padding="@dimen/dp10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/edContent"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:background="@null"
        android:hint="发现更多干货"
        android:textColor="@color/white"
        android:maxLength="16"
        android:textColorHint="@color/eee_5"
        android:textSize="@dimen/sp16"
        app:layout_constraintLeft_toRightOf="@id/imgBack"
        app:layout_constraintRight_toLeftOf="@id/imgTitle"
        tools:ignore="Autofill,HardcodedText,MissingConstraints,TextFields" />

    <ImageView
        android:id="@+id/imgTitle"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:padding="12dp"
        android:src="@drawable/icon_main_title_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints,VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>