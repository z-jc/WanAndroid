<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvGotoRegistered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp70"
        android:drawableEnd="@drawable/icon_goto_registered"
        android:drawablePadding="@dimen/dp8"
        android:text="@string/text_goto_registered"
        android:textColor="@color/Color_4184F2"
        android:textSize="@dimen/sp14" />

    <EditText
        android:id="@+id/edLoginUser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_below="@id/tvGotoRegistered"
        android:layout_marginStart="@dimen/dp50"
        android:layout_marginTop="@dimen/dp32"
        android:layout_marginEnd="@dimen/dp50"
        android:background="@drawable/bg_login_edit"
        android:digits="qwertyuiopasdfghjklzxcvbnm1234567890._ZXCVBNMASDFGHJKLQWERTYUIOP"
        android:gravity="center"
        android:hint="请输入用户名"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@color/black_6"
        android:textCursorDrawable="@drawable/bg_edit_cursor"
        android:textSize="@dimen/sp14"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imgHistory"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_below="@id/tvGotoRegistered"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp32"
        android:layout_marginEnd="@dimen/dp50"
        android:padding="@dimen/dp16"
        android:src="@drawable/icon_login_up" />

    <EditText
        android:id="@+id/edLoginPsw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_below="@id/edLoginUser"
        android:layout_marginStart="@dimen/dp50"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp50"
        android:background="@drawable/bg_login_edit"
        android:digits="qwertyuiopasdfghjklzxcvbnm1234567890._ZXCVBNMASDFGHJKLQWERTYUIOP"
        android:gravity="center"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@color/black_6"
        android:textCursorDrawable="@drawable/bg_edit_cursor"
        android:textSize="@dimen/sp14"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_below="@id/edLoginPsw"
        android:layout_marginStart="@dimen/dp50"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp50"
        android:background="@drawable/bg_tv_login"
        android:gravity="center"
        android:text="@string/text_tv_login"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edLoginUser"
        android:layout_marginStart="@dimen/dp50"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginEnd="@dimen/dp50"
        android:layout_marginBottom="@dimen/dp200"
        android:background="@drawable/bg_login_list"
        android:visibility="gone" />

</RelativeLayout>